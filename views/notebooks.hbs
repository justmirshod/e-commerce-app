{{#if notebooks.length}}
  <div class="notebooks">
    <div class="card-wrapper">
      {{#each notebooks}}
        <div class="card">
          <div class="card-image">
            <img src={{img}} />
          </div>
          <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p>{{descr}}</p>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action">
            <a href="/notebooks/{{id}}">Details</a>
            {{#if @root.isAuth}}
              {{#ifeq userId._id @root.userId}}
                <a href="/notebooks/{{id}}/edit?allow=allowed">Edit</a>
              {{/ifeq}}
              <form action="/card/add" method="POST" class="add_to_basket">
                <input type="hidden" name="id" value="{{id}}" />
                <button class="btn">Buy</button>
              </form>
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <h1>Notebooks empty</h1>
{{/if}}